<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"></button>
            @Html.ActionLink("Portfolio", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="navbar-collapse collapse" id="navbarSupportedContent">

                <ul class="nav navbar-nav mr-auto">
                    <li><a href="@Url.Action("Index", "Home")" class="nav-link @(ViewBag.Active == "Home" ? "active" : "")"><i class="fa fa-home"></i> Home</a></li>
                    <li><a href="@Url.Action("About", "Home")" class="nav-link @(ViewBag.Active == "About" ? "active" : "")"><i class="fa"></i> About</a></li>
                    <li><a href="@Url.Action("Contact", "Home")" class="nav-link @(ViewBag.Active == "Contact" ? "active" : "")"><i class="fa"></i> Contact</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right ml-auto">
                    <li><a href="@Url.Action("Projects", "Profile")" class="nav-link"> My projects</a></li>
                    <li><a href="@Url.Action("Account", "Profile")" class="nav-link"> Profile</a></li>
                    <li><a href="@Url.Action("Logout", "Profile")" class="nav-link"><i class="fa fa-power-off"></i> Log out</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr class="my-4">
        <footer>
            <p>&copy; @DateTime.Now.Year - Wojciech Kur ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>