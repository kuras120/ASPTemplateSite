
@model ASPTemplateSite.Models.ViewModelManager

<!-- The Login Modal -->
<div class="modal fade" id="loginModal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6"><h4 class="modal-title text-center">Portfolio</h4></div>
                        <div class="col-md-3"><button type="button" class="close" data-dismiss="modal">&times;</button></div>
                    </div>
                </div>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                @using (Html.BeginForm("SubmitLogin", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    <div class="input-group-vertical input-border">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text rounded-0"><i class="fa fa-user fa-fw"></i></span>
                            </div>
                            @Html.TextBoxFor(m => m.LoginModel.Login, new { @class = "form-control rounded-0" })
                        </div>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text rounded-0"><i class="fa fa-lock fa-fw"></i></span>
                            </div>
                            @Html.PasswordFor(m => m.LoginModel.Password, new { @class = "form-control rounded-0" })
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary float-right">Submit</button>
                }

            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <small>Don't have an account yet? <a href="@Url.Action("Register", "Home")" class="card-link"> Sign up</a></small>
            </div>

        </div>
    </div>
</div>
<!-- End of Login modal -->
